<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Tombol Tambah Promo -->
    <Button
        android:id="@+id/btnTambahPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF03DAC5"
        android:text="TAMBAH PROMO"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="18sp" />

    <!-- Daftar Promo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView untuk Promo 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- Kode Promo -->
                <TextView
                    android:id="@+id/tvKodePromo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XYZ123"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF03DAC5" />
                <!-- Deskripsi Promo -->
                <TextView
                    android:id="@+id/tvDeskripsiPromo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promo Menarik Cuci Minimal 10 Kg Gratis Cuci 1 Kg berlaku untuk kelipatannya"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
                <!-- Status Promo -->
                <Button
                    android:id="@+id/btnStatusPromo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView untuk Promo 2 (sama seperti Promo 1) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- Kode Promo -->
                <TextView
                    android:id="@+id/tvKodePromo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XYZ123"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF03DAC5" />
                <!-- Deskripsi Promo -->
                <TextView
                    android:id="@+id/tvDeskripsiPromo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promo Menarik Cuci Minimal 10 Kg Gratis Cuci 1 Kg berlaku untuk kelipatannya"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
                <!-- Status Promo -->
                <Button
                    android:id="@+id/btnStatusPromo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
